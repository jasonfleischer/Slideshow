<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#000"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/title_bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/launcher"
        android:contentDescription="@string/content_description_icon"/>

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/title_bar_settings"
        android:layout_toEndOf="@id/title_bar_icon"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:textColor="#FFF"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/title_bar_settings"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings_white"
        android:contentDescription="@string/content_description_settings"/>
</RelativeLayout>